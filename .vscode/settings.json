{
      "files.associations": {
            "*.cshtml": "html",
            "*.cpp": "cpp",
            "string": "cpp",
            "iostream": "cpp",
            "ostream": "cpp",
            "istream": "cpp",
            "iosfwd": "cpp",
            "*.tcc": "cpp",
            "fstream": "cpp",
            "vector": "cpp",
            "typeinfo": "cpp"
      },
      "[cpp]": {
            "editor.formatOnType": true,
            "editor.formatOnSave": true,
            "editor.renderIndentGuides": true,
            "editor.insertSpaces": true,
            "editor.detectIndentation": true,
            "editor.tabSize": 4
      },
      "[c]": {
            "editor.formatOnType": true,
            "editor.formatOnSave": true,
            "editor.renderIndentGuides": true,
            "editor.insertSpaces": true,
            "editor.detectIndentation": true,
            "editor.tabSize": 4

      },
