{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
      {
          // 任務標籤名
          "label": "compile",
          // 任務型別
          "type": "shell",
          // 編譯器選擇
          "command": "g++",
          // 編譯預執行的命令集
          "args": [
              "-g",
              "\"${file}\"",
              "-o",
              "\"${fileDirname}\\${fileBasenameNoExtension}\""
          ],
          // 任務輸出配置
          "presentation": {
              "reveal": "always",
              "panel": "shared",
              "focus": false,
              "echo": true
          },
          // 任務所屬組名
          "group": "build",
          // 編譯問題輸出匹配配置
          "problemMatcher": {
              "owner": "cpp",
              "fileLocation": "absolute",
              "pattern": {
                  "regexp": "^(.*):(\\d+):(\\d+):\\s+(error):\\s+(.*)$",
                  "file": 1,
                  "line": 2,
                  "column": 3,
                  "severity": 4,
                  "message": 5
              }
          }
      },
      {
          "type": "shell",
          "label": "build",
          "command": "D:\\Program Files (x86)\\mingw-w64\\i686-8.1.0-posix-dwarf-rt_v6-rev0\\mingw32\\bin\\g++.exe",
          "args": [
              "-g",
              "${file}",
              "-o",
              "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe"
          ],
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          }
      },{
        "type": "shell",
        "label": "builds",
        "command": "D:\\Program Files (x86)\\mingw-w64\\i686-8.1.0-posix-dwarf-rt_v6-rev0\\mingw32\\bin\\g++.exe",
        "args": [
            "-g",
            "${fileDirname}/*.cpp",
            "-o",
            "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe"
        ],
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }
  ]
}